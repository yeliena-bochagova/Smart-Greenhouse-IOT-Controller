{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Authentication": {
    "Google": {
      "ClientId": "YOUR_CLIENT_ID",
      "ClientSecret": "YOUR_CLIENT_SECRET",
      "AuthorizationEndpoint": "https://accounts.google.com/o/oauth2/v2/auth",
      "TokenEndpoint": "https://oauth2.googleapis.com/token",
      "UserInfoEndpoint": "https://openidconnect.googleapis.com/v1/userinfo",
      "Scopes": "openid profile email"
    }
  },
  "DatabaseProvider": "Sqlite",
  
  "ConnectionStrings": {
    "Sqlite": "Data Source=SmartGreenhouse.db",
    "SqlServer": "Server=(localdb)\\mssqllocaldb;Database=GreenhouseDb;Trusted_Connection=True;MultipleActiveResultSets=true",
    "Postgres": "Host=localhost;Port=5432;Database=greenhouse;Username=postgres;Password=postgres",
    "InMemory": "GreenhouseTestDb"
  }
}