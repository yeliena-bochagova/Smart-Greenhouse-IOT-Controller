@model SmartGreenhouse.Web.Models.UserRegistrationModel
@{
    ViewData["Title"] = "Реєстрація";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #e8f5e9, #f1f8e9);
        margin: 0;
        padding: 0;
    }

    .register-container {
        max-width: 500px;
        margin: 50px auto;
        background: #ffffff;
        padding: 35px 40px;
        border-radius: 18px;
        box-shadow: 0px 4px 15px rgba(0,0,0,0.12);
    }

    h2 {
        text-align: center;
        font-size: 2rem;
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 25px;
    }

    label {
        font-weight: 600;
        color: #2e7d32;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        margin-bottom: 15px;
        border-radius: 10px;
        border: 1px solid #cfd8dc;
        font-size: 1.05rem;
        box-sizing: border-box;
        transition: 0.3s;
    }

    .form-control:focus {
        border-color: #43a047;
        box-shadow: 0 0 6px rgba(67,160,71,0.3);
        outline: none;
    }

    .btn-primary {
        width: 100%;
        padding: 12px;
        font-size: 1.1rem;
        border-radius: 10px;
        background-color: #43a047;
        border: none;
        color: #fff;
        font-weight: bold;
        transition: 0.3s;
        cursor: pointer;
        box-shadow: 0px 3px 8px rgba(0,0,0,0.15);
    }

    .btn-primary:hover {
        background-color: #2e7d32;
    }

    .text-danger {
        font-size: 0.9rem;
        color: #d32f2f !important;
    }

    .login-link {
        text-align: center;
        margin-top: 15px;
        font-size: 1rem;
    }

    .login-link a {
        color: #2980b9;
        font-weight: bold;
        text-decoration: none;
    }

    .login-link a:hover {
        color: #e67e22;
    }
</style>

<div class="register-container">
    <h2>Створення облікового запису</h2>

    <form asp-action="Register" method="post">

        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>

        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>

        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>

        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <button type="submit" class="btn-primary">Зареєструватися</button>
    </form>

    <div class="login-link">
        Уже маєте акаунт? <a href="/Auth/Login">Увійти</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
