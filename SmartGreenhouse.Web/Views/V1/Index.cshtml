@using SmartGreenhouse.Clients 
@model IEnumerable<SmartGreenhouse.Clients.Measurement>

@{
    ViewData["Title"] = "V1: Базовий моніторинг";
}

<div class="container mt-4">
    <div class="d-flex align-items-center mb-3">
        <i class="bi bi-speedometer2 fs-2 text-primary me-3"></i>
        <div>
            <h2 class="mb-0">@ViewData["Title"]</h2>
            <small class="text-muted">Сумісний інтерфейс (ЛР4)</small>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th><i class="bi bi-clock"></i> Час</th>
                        <th><i class="bi bi-thermometer-half"></i> Температура</th>
                        <th><i class="bi bi-moisture"></i> Вологість</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Логіка кольору: Червоний, якщо > 25, Синій, якщо < 18
                        string tempClass = item.Temperature > 25 ? "text-danger fw-bold" : (item.Temperature < 18 ? "text-primary" : "");
                        
                        <tr>
                            <td class="ps-4">@item.Id</td>
                            <td>@item.Timestamp.LocalDateTime.ToString("g")</td>
                            <td class="@tempClass">
                                @item.Temperature.ToString("F1") °C
                                @if(item.Temperature > 25) { <i class="bi bi-exclamation-circle-fill small"></i> }
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="me-2">@item.Humidity.ToString("F0")%</span>
                                    <div class="progress flex-grow-1" style="height: 5px; max-width: 100px;">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: @((int)item.Humidity)%"></div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>