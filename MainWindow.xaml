<Window x:Class="SmartGreenhouse.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Greenhouse Control Panel" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель сенсорів -->
        <GroupBox Header="Показники сенсорів" Grid.Row="0" Margin="5">
            <DataGrid x:Name="SensorsDataGrid" AutoGenerateColumns="True" />
        </GroupBox>

        <!-- Панель керування -->
        <GroupBox Header="Керування" Grid.Row="1" Margin="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnHeater" Content="Обігрівач" Width="100" Margin="10"/>
                <Button x:Name="btnWater" Content="Полив" Width="100" Margin="10"/>
                <Button x:Name="btnLight" Content="Освітлення" Width="100" Margin="10"/>
            </StackPanel>
        </GroupBox>

        <!-- Панель логів -->
        <GroupBox Header="Журнал подій" Grid.Row="2" Margin="5">
            <ListBox x:Name="LogsListBox"/>
        </GroupBox>
    </Grid>
</Window>
