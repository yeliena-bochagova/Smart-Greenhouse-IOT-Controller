<Window x:Class="SmartGreenhouse.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartGreenhouse.UI"
        mc:Ignorable="d"
        Title="Smart Greenhouse Control Panel" Height="600" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Дві таблиці: зсередини теплиці (ліворуч) і дані середовища (праворуч) -->
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" /> <!-- separator -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Дані всередині теплиці" Grid.Column="0" Margin="0">
                <!-- internal sensors -->
                <DataGrid x:Name="SensorsDataGrid"
                          AutoGenerateColumns="True"
                          IsReadOnly="False"
                          x:FieldModifier="public"
                          Margin="4"/>
            </GroupBox>

            <GroupBox Header="Дані середовища (зовнішні / пристрій)" Grid.Column="2" Margin="0">
                <!-- environment / device -->
                <DataGrid x:Name="EnvDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          x:FieldModifier="public"
                          CellEditEnding="EnvDataGrid_CellEditEnding"
                          Margin="4">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ключ" Binding="{Binding Key}" Width="2*" IsReadOnly="True" />
                        <DataGridTextColumn Header="Значення" Binding="{Binding Value}" Width="3*" IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <!-- Панель керування -->
        <GroupBox Header="Керування" Grid.Row="1" Margin="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnHeater" Content="Обігрівач" Width="110" Margin="10" x:FieldModifier="public" />
                <Button x:Name="btnVentilation" Content="Вентиляція" Width="110" Margin="10" x:FieldModifier="public" />
                <Button x:Name="btnWater" Content="Полив" Width="110" Margin="10" x:FieldModifier="public" />
                <Button x:Name="btnLight" Content="Освітлення" Width="110" Margin="10" x:FieldModifier="public" />
            </StackPanel>
        </GroupBox>

        <!-- Панель логів -->
        <GroupBox Header="Журнал подій" Grid.Row="2" Margin="5" >
            <ListBox x:Name="LogsListBox" x:FieldModifier="public" />
        </GroupBox>
    </Grid>
</Window>